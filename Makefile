
TARGET = photo

# This takes care of a warning message generated by the use of Math.round in image_util.vala
VALAC_OPTS =--Xcc=-std=c99

SRC_FILES = \
	main.vala \
	AppWindow.vala \
	CollectionPage.vala \
	Thumbnail.vala \
	DatabaseTables.vala \
	ThumbnailCache.vala \
	image_util.vala

PKGS = \
	gtk+-2.0 \
	sqlite3 \
	vala-1.0

all: $(TARGET)

clean:
	rm -f $(TARGET)

$(TARGET): $(SRC_FILES) Makefile
	valac $(VALAC_OPTS) $(foreach pkg,$(PKGS),--pkg $(pkg)) $(SRC_FILES) -o $(TARGET)

